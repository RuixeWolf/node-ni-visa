    "dev": "nodemon --config ./nodemon.json ./src/main.ts",
    "lint-check": "eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts .",
    "lint-fix": "eslint --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix .",
